passwd_list () {
	pattern="$1"
	oldifs="${IFS}"
	IFS=":"
	cat "${filecacherootpath}/etc/passwd" | grep -v "^#" | grep -v "^$" | grep "${pattern}" | while read passwdusername passwdhash passwduserid passwdgroupid passwdgecos passwdhomefilename passwdshellfilename
	do
		IFS="${oldifs}"
		printf "${passwdusername}\n"
		IFS=":"
	done
	IFS="${oldifs}"
}

passwd_show_hash () {
	pattern="$1"
	oldifs="${IFS}"
	cat "${filecacherootpath}/etc/passwd" | grep -v "^#" | grep -v "^$" | while read passwdusername passwdhash passwduserid passwdgroupid passwdgecos passwdhomefilename passwdshellfilename
	do
		IFS="${oldifs}"
		if [ "${passwdusername}" = "${pattern}" ]
		then
			printf "${passwdhash}\n"
		fi
		IFS=":"
	done
	IFS="${oldifs}"
}
