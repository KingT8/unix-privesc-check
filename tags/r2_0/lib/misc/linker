# Supports: Linux, AIX

linker_list_dependencies () {
	pattern="$1"
	if [ "`uname`" = "AIX" ]
	then
		ldd "${pattern}" | while read linkerlibrary
		do
			case "${linkerfilename}" in
				/*)
					linkerfilename="`printf "${linkerfilename}" | sed "s/\(.*//g"`"
					linker_list_dependencies "${linkerfilename}"
					printf "${linkerfilename}\n"
					;;
			esac
		done | sort | uniq
	else
		ldd "${pattern}" | while read linkerlibrary dummy linkerfilename dummy
		do
			case "${linkerfilename}" in
				/*)
					linker_list_dependencies "${linkerfilename}"
					printf "${linkerfilename}\n"
					;;
			esac
		done | sort | uniq
	fi
}

linker_list_system_filenames () {
	if [ "`uname`" = "Linux" ]
	then
		cat "${filecacherootpath}/etc/ld.so.conf" | while read line
		do
			case "${line}" in
				/*)
					printf "${line}\n"
					;;
				include*)
					printf "${line}\n" | while read dummy linkerfilename
					do
						# not quoted to allow the shell to expand it for us
						cat ${filecacherootpath}${linkerfilename} | while read line
						do
							case "${line}" in
								/*)
									printf "${line}\n"
									;;
							esac
						done
					done
					;;
			esac
		done | sort | uniq
	else
		if [ "`uname`" = "AIX" ]
		then
			printf "/lib\n"
			printf "/usr/lib\n"
		fi
	fi
}
