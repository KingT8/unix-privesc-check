# Supports: Linux

inetd_list () {
	pattern="${1}"
	cat /etc/inetd.conf | grep -v "^#" | grep -v "^$" | grep "${pattern}" | while read portnumber sockettype protocol flags userid command arguments argumentsarguments
	do
		printf "${portnumber}\n";
	done
}

inetd_show_command () {
	pattern="${1}"
	cat /etc/inetd.conf | grep -v "^#" | grep -v "^$" | while read portnumber sockettype protocol flags userid command arguments argumentsarguments
	do
		if [ "${portnumber}" = "${pattern}" ]
		then
			printf "${command}\n"
		fi
	done
}

inetd_show_userid () {
	pattern="${1}"
	cat /etc/inetd.conf | grep -v "^#" | grep -v "^$" | while read portnumber sockettype protocol flags userid command arguments argumentsarguments
	do
		if [ "${portnumber}" = "${pattern}" ]
		then
			printf "${userid}\n"
		fi
	done
}

inetd_show_arguments () {
	pattern="${1}"
	cat /etc/inetd.conf | grep -v "^#" | grep -v "^$" | while read portnumber sockettype protocol flags userid command arguments argumentsarguments
	do
		if [ "${portnumber}" = "${pattern}" ]
		then
			printf "${arguments}\n"
		fi
	done
}
