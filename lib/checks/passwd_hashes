. lib/misc/stdio
. lib/misc/passwd

passwd_hashes_init () {
	stdio_message_log "passwd_hashes" "Starting"
}

passwd_hashes_main () {
	passwd_list ".*" | while read passwdusername
	do
		if [ "${passwdusername}" = "+" ]
		then
			stdio_message_warn "passwd_hashes" "/etc/passwd allows external authentication"
		else
			passwdhash="`passwd_show_hash "${passwdusername}"`"
			# TODO this causes a problem on AIX :(
			if [ "${passwdhash}" != "x" -a "${passwdhash}" != "!" -a "${passwdhash}" != "*" ]
			then
				if [ "${passwdhash}" = "" ]
				then
					stdio_message_warn "passwd_hashes" "${passwdusername} has no password set"
				else
					stdio_message_warn "passwd_hashes" "/etc/passwd may contain hash for ${passwdusername}"
				fi
			fi
		fi
	done
}

passwd_hashes_fini () {
	stdio_message_log "passwd_hashes" "Ending"
}
