. lib/misc/stdio
. lib/misc/file

ssh_key_unencrypted_init () {
	stdio_message_log "ssh_key_unencrypted" "Starting"
}

ssh_key_unencrypted_main () {
	file_check_or_generate_cache
	# TODO we should expand this list
	for filenamepattern in "*id_dsa*" "*id_rsa*" "*.ssh/*"
	do
		file_list_by_filename "${filenamepattern}" | while read filename
		do
			if [ "`file_matches_string "${filename}" "ENCRYPTED"`" -ne 1 ]
			then
				stdio_message_warn "ssh_key_unencrypted" "${filename} is unencrypted"
			fi
		done
	done
}

ssh_key_unencrypted_fini () {
	stdio_message_log "ssh_key_unencrypted" "Ending"
}
