# Based on Microsoft's banned API list as parsed by ../../tools/generate_banned.sh

. lib/misc/stdio
. lib/misc/privileged
. lib/misc/binary

binary_banned_init () {
	stdio_message_log "binary_banned" "Starting"
}

binary_banned_main () {
	privileged_list | while read type filename usergroupid
	do
		stdio_message_log "binary_banned" "${filename} is ${type}, running as user/group ${usergroupid}"
		if [ "`binary_matches_function "${filename}" "alloca|gets|memcpy|scanf|sprintf|sscanf|strcat|StrCat|strcpy|StrCpy|strlen|StrLen|strncat|StrNCat|strncpy|StrNCpy|strtok|swprintf|vsnprintf|vsprintf|vswprintf|wcscat|wcscpy|wcslen|wcsncat|wcsncpy|wcstok|wmemcpy"`" -eq 1 ]
		then
			stdio_message_warn "binary_banned" "${filename} uses banned APIs"
		fi
	done
}

binary_banned_fini () {
	stdio_message_log "binary_banned" "Ending"
}