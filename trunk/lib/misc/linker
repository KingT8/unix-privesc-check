# Supports: Linux, AIX

linker_list_dependencies () {
	pattern="${1}"
	if [ "`uname`" = "AIX" ]
	then
		ldd "${pattern}" | while read library
		do
			case "${filename}" in
				/*)
					filename="`printf "${filename}" | sed "s/\(.*//g"`"
					linker_list_dependencies "${filename}"
					printf "${filename}\n"
					;;
			esac
		done | sort | uniq
	else
		ldd "${pattern}" | while read library dummy filename dummy
		do
			case "${filename}" in
				/*)
					linker_list_dependencies "${filename}"
					printf "${filename}\n"
					;;
			esac
		done | sort | uniq
	fi
}

linker_list_system_filenames () {
	if [ "`uname`" = "Linux" ]
	then
		cat "/etc/ld.so.conf" | while read line
		do
			case "${line}" in
				/*)
					printf "${line}\n"
					;;
				include*)
					printf "${line}\n" | while read dummy filename
					do
						cat "${filename}" | while read line
						do
							case "${line}" in
								/*)
									printf "${line}\n"
									;;
							esac
						done
					done
					;;
			esac
		done | sort | uniq
	else
		if [ "`uname`" = "AIX" ]
		then
			printf "/lib\n"
			printf "/usr/lib\n"
		fi
	fi
}