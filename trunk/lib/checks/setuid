. lib/misc/stdio
. lib/misc/file

setuid_init () {
	stdio_message_log "setuid" "Starting"
}

setuid_main () {
	file_check_or_generate_cache
	for permissionspattern in "-??s??????" "-??S??????"
	do
		file_list_by_perm "${permissionspattern}" | while read filename
		do
			stdio_message_warn "setuid" "${filename} is setuid"
			file_show_perms "${filename}" | while read filename filepermissions fileuserid filegroupid
			do
				# TODO we should validate these
				stdio_message_debug "setuid" "${filename} (${fileuserid}, ${filegroupid})=${filepermissions}"
			done
		done
	done
}

setuid_fini () {
	stdio_message_log "setuid" "Ending"
}
